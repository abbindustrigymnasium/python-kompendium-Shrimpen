print("Hur många ska ha 2 korvar")
korvar2= int(input())*2
print(korvar2)
print("Hur många ska ha 3 korvar")
korvar3= int(input())*3
print(int(korvar3))
korvarsvar= int(korvar2+korvar3)/8
print(str(korvarsvar)+" korvar behöver du")

print("Hur många ska ha 2 vegokorvar")
vego2= int(input())*2
print(vego2)
print("Hur många ska ha 3 vegokorvar")
vego3= int(input())*3
print(int(vego3))
vegosvar= int(vego2+vego3)/4
print(str(vegosvar)+" vegokorvar behöver du")

dryck= int(((korvar2+vego2)/2)+(korvar3+vego3)/3)
print("Så många drickor behöver du "+ str(dryck))

